{
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "source": "build"
  },
  "hosting": {
    "public": "build/public",
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
}
