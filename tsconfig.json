{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",
        "lib": ["es2022", "dom"],

        /* Modules */
        "module": "es2022",
        "moduleResolution": "node",
        "types" : ["@cloudflare/workers-types/2023-07-01", "./global.d.ts", "@types/node"],

        /* Interop Constraints */
		"allowSyntheticDefaultImports": true,

        /* Type Checking  */
        "noImplicitAny": true,
        "strict": true,
        
        /* Emit */
        "outDir": "build",
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}