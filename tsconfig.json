{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",
        "lib": ["es2022", "dom"],
        "paths": {
            "Engine/*": ["./Engine/*"],
            "*": ["./src/*"]
        },

        /* Modules */
        "module": "es2022",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "types" : ["@cloudflare/workers-types/2023-07-01", "@types/node"],
        "resolveJsonModule": true,

        /* Interop Constraints */
		"allowSyntheticDefaultImports": true,

        /* Type Checking  */
        "noImplicitAny": true,
        "strict": true,
        
        /* Emit */
        "outDir": "build",
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}